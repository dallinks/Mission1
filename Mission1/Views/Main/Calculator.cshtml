@{
    ViewData["Title"] = "Calculator";
    ViewData["Header"] = "Grade Calculator";
}
@model CalculatorModel

<br /><h2>Enter the percentage scored for each grade category</h2>

<form method="post">
    <label>Assignments: </label>
    <input id="assignments" asp-for="assignment" /><br />
    <label>Group Projects: </label>
    <input id="groupprojects" asp-for="groupprojects"/><br />
    <label>Quizzes: </label>
    <input id="quizzes" asp-for="quizzes"/><br />
    <label>Exams: </label>
    <input id="exams" asp-for="exams"/><br />
    <label>INTEX: </label>
    <input id="intex" asp-for="INTEX"/><br /><br />
    <input type="submit" value="Calculate" id="btnSend" style="margin-left:205px;" />
    <div asp-validation-summary="All"></div>
</form>
